{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tailwindcss -i ./static/src/input.css -o ./static/dist/main.css --minify",
    "watch": "tailwindcss -i ./static/src/input.css -o ./static/dist/main.css --watch",
    "// --- Scripts de Gerenciamento de 'Vendor' ---": "---",
    "vendor:clean": "rimraf static/vendor",
    "vendor:dirs": "mkdirp static/vendor/js static/vendor/css",
    "vendor:copy:js": "cpx \"node_modules/jquery/dist/jquery.min.js\" static/vendor/js && cpx \"node_modules/select2/dist/js/select2.full.min.js\" static/vendor/js && cpx \"node_modules/chart.js/dist/chart.umd.min.js\" static/vendor/js",
    "vendor:copy:css": "cpx \"node_modules/select2/dist/css/select2.min.css\" static/vendor/css",
    "vendor:build": "npm run vendor:clean && npm run vendor:dirs && npm run vendor:copy:js && npm run vendor:copy:css",
    "// --- Hook de Pós-Instalação ---": "---",
    "postinstall": "npm run vendor:build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cpx": "^1.5.0",
    "mkdirp": "^3.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "select2-tailwindcss-theme": "^1.2.4",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "chart.js": "^4.5.1",
    "jquery": "^3.7.1",
    "select2": "^4.1.0-rc.0"
  }
}
